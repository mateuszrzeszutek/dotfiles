# vim: ft=cfg

# keep the personal details in a separate file
[include]
path = .gitconfig.personal

[alias]
a   = add
aa  = add --all
b   = branch
c   = commit
co  = checkout
cp  = cherry-pick
dh  = diff HEAD
f   = fetch
l   = pull
lf  = ls-files
lol = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
me  = merge
p   = push
re  = rebase
st  = status
sta = git stash
stl = git stash list
stp = git stash pop

tag = tag -s

[branch]
sort = -committerdate

[color]
ui = true

[column]
ui = auto

# depends on the workstation, really
#[commit]
#gpgsign = true

[credential]
helper = cache

[diff]
algorithm = histogram
colorMoved = plain
mnemonicPrefix = true
renames = true

[fetch]
all = true
prune = true

[help]
autocorrect = prompt

[pull]
rebase = true

[push]
autoSetupRemote = true
default = simple

[rebase]
autoSquash = true
autoStash = true
updateRefs = true

[rerere]
enabled = true
autoupdate = true

[svn]
rmdir = true

[tag]
sort = version:refname
